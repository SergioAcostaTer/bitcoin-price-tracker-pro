{
  "manifest_version": 3,
  "name": "Bitcoin Price Tracker Pro",
  "version": "2.0.0",
  "description": "Advanced Bitcoin price tracker with real-time alerts, portfolio tracking, and Binance-style interface.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Bitcoin Price Tracker Pro"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "alarms",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "https://api.binance.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}